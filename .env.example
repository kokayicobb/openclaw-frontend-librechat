# Copy this file to .env and fill in your actual values
# DO NOT commit .env to git!

# Server settings
HOST=0.0.0.0
PORT=3080
DOMAIN_CLIENT=https://your-domain.com
DOMAIN_SERVER=https://your-domain.com

# Database
MONGO_URI=mongodb://mongodb:27017/LibreChat

# Encryption keys - generate new ones!
CREDS_KEY=your-creds-key-here
CREDS_IV=your-creds-iv-here

# JWT secrets - generate new ones!
JWT_SECRET=your-jwt-secret-here
JWT_REFRESH_SECRET=your-jwt-refresh-secret-here

# Custom API keys
OPENCLAW_API_KEY=your-openclaw-key-here
OPENCODE_PROXY_KEY=your-opencode-key-here
CLAUDE_PROXY_KEY=your-claude-key-here

# Search
SEARCH=true
MEILI_HOST=http://meilisearch:7700
MEILI_MASTER_KEY=your-meili-master-key-here

# Optional: OpenAI, Anthropic, Google API keys
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=

# Registration
ALLOW_REGISTRATION=true
